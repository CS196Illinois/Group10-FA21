import pygame

import random

from pygame.locals import (
    RLEACCEL,
    K_UP,
    K_DOWN,
    K_LEFT,
    K_RIGHT,
    K_ESCAPE,
    KEYDOWN,
    QUIT,
)
from pygame.sprite import spritecollide

SCREEN_WIDTH = 800
SCREEN_HEIGHT = 600

class Player(pygame.sprite.Sprite):

    def __init__(self):
        super(Player, self).__init__()
        self.surf = pygame.Surface((75,25))
        self.surf.set_colorkey((255, 255, 255), RLEACCEL)
        self.rect = self.surf.get_rect()
        self.dy = 0
        self.jumpAvailable = True

    def update(self, pressed_keys):
        if pressed_keys[K_UP] and self.jumpAvailable == True:
            self.dy = -10
            #move_up_sound.play()
        if pressed_keys[K_DOWN]:
            self.rect.move_ip(0, 5)
            #move_down_sound.play()
        if pressed_keys[K_LEFT]:
            self.rect.move_ip(-5, 0)
        if pressed_keys[K_RIGHT]:
            self.rect.move_ip(5, 0)
        
        self.rect.move_ip(0, self.dy)

        if self.rect.left < 0:
            self.rect.left = 0
        elif self.rect.right > SCREEN_WIDTH:
            self.rect.right = SCREEN_WIDTH
        if self.rect.top <= 0:
            self.rect.top = 0
        elif self.rect.bottom >= SCREEN_HEIGHT:
            self.rect.bottom = SCREEN_HEIGHT
        
        self.dy += 1

class Platform(pygame.sprite.Sprite):
   def __init__(self):
        super(Platform, self).__init__()
        self.surf = pygame.Surface((1000,6))
        self.surf.set_colorkey((0,0,1), RLEACCEL)
        self.rect = self.surf.get_rect(
            center = (0,random.randint(0,SCREEN_HEIGHT))
        )

pygame.init()

clock = pygame.time.Clock()

screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))



player = Player()
platform = Platform()
platform2 = Platform()

all_sprites = pygame.sprite.Group()
platforms = pygame.sprite.Group()

platforms.add(platform)
platforms.add(platform2)

all_sprites.add(player)
all_sprites.add(platform)
all_sprites.add(platform2)

#move_up_sound = pygame.mixer.Sound("ao.ogg")
#move_down_sound = pygame.mixer.Sound("ao.ogg")

#move_up_sound.set_volume(1)
#move_down_sound.set_volume(1)

running = True


while running:
    for event in pygame.event.get():
        if event.type == KEYDOWN:
            if event.key == K_ESCAPE:
                running = False

        elif event.type == QUIT:
            running = False


    pressed_keys = pygame.key.get_pressed()
    player.update(pressed_keys)

    screen.fill((206, 250, 135))

    for entity in all_sprites:
        screen.blit(entity.surf, entity.rect)
    

    if pygame.sprite.spritecollide(player, platforms, False):
        player.dy = 0
        player.jumpAvailable = True
    else:
        player.jumpAvailable = False

    pygame.display.flip()

    clock.tick(60)
